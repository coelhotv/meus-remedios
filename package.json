{
  "name": "meus-remedios",
  "private": true,
  "version": "2.5.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "// --- Testes Base ---": "",
    "test": "vitest run",
    "test:watch": "vitest",
    "// --- Otimizações Fase 1 ---": "",
    "test:changed": "vitest run --changed=main --reporter=dot",
    "test:related": "vitest run --related --passWithNoTests --reporter=dot",
    "test:critical": "vitest run src/services src/utils src/schemas src/hooks --reporter=verbose",
    "test:unit": "vitest run --exclude '**/*.integration.test.js' --reporter=dot",
    "test:quick": "vitest run --reporter=dot --no-color 2>&1 | head -30",
    "// --- Fase 2: Seleção Inteligente ---": "",
    "test:smart": "node .github/scripts/select-tests.js | xargs vitest run --reporter=dot",
    "test:git": "vitest run --changed=main --reporter=dot",
    "test:affected": "vitest run --related --passWithNoTests --reporter=dot",
    "test:smoke": "vitest run --config vitest.smoke.config.js",
    "// --- Validação Rápida ---": "",
    "validate": "npm run lint && npm run test:critical",
    "validate:quick": "npm run lint && npm run test:related",
    "bot": "cd server && npm run dev"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.33.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.4.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "esbuild": "^0.26.0"
  }
}
