{
  "name": "meus-remedios",
  "private": true,
  "version": "2.9.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "// --- Test Scripts (Testing Infrastructure Overhaul) ---": "",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:smoke": "vitest run --config vitest.smoke.config.js",
    "test:critical": "vitest run --config vitest.critical.config.js",
    "test:changed": "vitest run --changed=main",
    "test:coverage": "vitest run --config vitest.ci.config.js",
    "test:components": "vitest run src/components src/shared/components",
    "test:services": "vitest run src/services src/features",
    "// --- Validation Scripts ---": "",
    "validate": "npm run lint && npm run test",
    "validate:quick": "npm run lint && npm run test:changed",
    "validate:full": "npm run lint && npm run test:coverage && npm run build",
    "// --- Other Scripts ---": "",
    "bot": "cd server && npm run dev",
    "prepare": "husky"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.33.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "vite": "^7.2.4",
    "vitest": "^4.0.16",
    "yaml-lint": "^1.7.0"
  },
  "overrides": {
    "esbuild": "^0.26.0"
  }
}
